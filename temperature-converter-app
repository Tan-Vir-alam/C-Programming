#include <stdio.h>
int main(){
  int a;
  float t,f,c;
  char b;

  printf("If you want to convert C to F type 1.\n If you want to convert F to C type 2.");
  scanf("%d",&a);
  printf("Enter your temperature with C or F:");
  scanf("%f,%c",&t,&b);
  //sacnf("%c",&b);
  if (a==1){
    f = ((9*t)/5)+32;
    printf("%.1f Fahrenheit\n",f);
  }
  else if (a==2){
    c = ((t-32)*5)/9;
    printf("%.1f Celsius",c);
  }
  else{
    printf("The choice is not correct.");
  }
return 0;
}
